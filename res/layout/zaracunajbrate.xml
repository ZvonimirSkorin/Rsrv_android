<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ZaracunajbrateActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/akcionatrakaProfilKorisnika23"
        android:background="@drawable/colorica"
        android:layout_height="47dp">

        <ImageView
            android:id="@+id/nazadzaracunajbrate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />
        <Button
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:text="R"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/kolokejebrePara"/>
<ImageView
    android:layout_width="40dp"
    android:layout_height="match_parent"
    android:id="@+id/dolar"
    android:layout_marginRight="-10dp"
    android:background="@drawable/ic_baseline_attach_money_24"
    android:layout_toLeftOf="@+id/kolokejebre"/>
        <TextView
            android:layout_width="50dp"
android:layout_toLeftOf="@+id/dolar"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_height="50dp"
            android:id="@+id/kolokejebrePara"
            android:layout_gravity="right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="546kn"
            android:id="@+id/kolokejebre"
            android:layout_gravity="center"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/akcionatrakaProfilKorisnika23"
        android:id="@+id/srpskilejaut"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/srpskilejaut"
        android:id="@+id/racunskiresajkler"/>

<fragment
    android:layout_width="300dp"
    android:layout_alignParentEnd="true"
    android:layout_height="match_parent"
    android:visibility="invisible"
    android:name="com.example.reservezavlasnike.BlankFragment"
    android:id="@+id/fragment"/>

</RelativeLayout>