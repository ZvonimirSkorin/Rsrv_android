<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/cijelirelaitiv"
android:layout_marginBottom="-1.5dp"
    android:layout_width="match_parent" android:layout_height="18dp">

    <RelativeLayout
        android:background="@drawable/slobodnaboja"
        android:padding="10dp"
        android:visibility="gone"
     android:paddingBottom="20dp"
        android:id="@+id/relativica"
        android:layout_margin="7dp"
        android:layout_width="match_parent" android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/black"
    android:id="@+id/bezvezninaslov"
    android:layout_centerHorizontal="true"
    android:textSize="14sp"
    android:text="Mario"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/ustaskipodatci"
        android:layout_below="@id/bezvezninaslov"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.04.1941."
        android:layout_marginRight="10dp"
        android:id="@+id/ustaskiDatum"
        android:textColor="@color/black"
        android:textSize="14sp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/crticarasproedna"
android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/ustaskiDatum"
        android:text="07:00-09:00"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        android:textAlignment="gravity"
     />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ustaskipodatci"
        android:text="Vikleri, šišanje."
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:id="@+id/bezveznaadresa"
       android:layout_centerHorizontal="true"
        />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="false"
            android:textAlignment="center"
            android:layout_marginTop="-5dp"
            android:text="14:00"
            android:id="@+id/cajttermina"
            android:textSize="14sp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="invisible"
            android:background="@color/grey"
            android:layout_marginLeft="-3dp"
           android:layout_marginRight="-11dp"
            android:layout_below="@id/crtacajtna"
            android:layout_toRightOf="@id/cajttermina"
            android:layout_toLeftOf="@id/kockica"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:id="@+id/crtacajtna"
android:visibility="invisible"
            android:layout_marginLeft="-3dp"
            android:background="@color/grey"
            android:layout_toRightOf="@id/cajttermina"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:layout_marginLeft="10dp"
            android:id="@+id/kockica"
            android:layout_marginRight="15dp"
android:background="#b3e5fc"
            android:elevation="0dp"
           android:textSize="12sp"
            android:textColor="@color/black"
         android:textStyle="bold"
            android:layout_toRightOf="@+id/cajttermina"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginRight="15dp"
            android:id="@+id/kockica2"
            android:background="@color/black"
            android:elevation="0dp"
            android:layout_toRightOf="@+id/cajttermina"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/trenutnaCrta"
android:background="@color/black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/cajttermina"
            android:layout_marginTop="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
android:visibility="invisible"
                android:background="@color/black"
                android:foregroundGravity="center"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/ajdebremolimte"
            android:layout_toRightOf="@+id/cajttermina"
            android:layout_marginRight="-11dp"
            android:layout_centerVertical="false"
            android:elevation="2dp"
            android:visibility="visible"
            android:background="@color/grey"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:id="@+id/ajdebremolimte2"
            android:layout_toRightOf="@+id/cajttermina"
            android:layout_marginRight="-11dp"
            android:layout_centerVertical="false"
            android:elevation="0dp"
            android:visibility="visible"
            android:background="@color/grey"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/cajttermina"
            android:background="#b3e5fc"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>


</RelativeLayout>
