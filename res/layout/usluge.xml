<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:orientation="vertical"
    android:padding="4dp"
    android:background="@drawable/cutomacha"
    android:elevation="5dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="50dp"
        android:layout_centerInParent="true"
        android:id="@+id/slikausluge"
        android:layout_margin="5dp"
        android:layout_height="70dp"
        />
   <ImageView
       android:layout_width="40dp"
       android:layout_height="50dp"
       android:id="@+id/ljevaslika"
       android:layout_centerInParent="true"
       android:layout_alignParentStart="true"
       />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/ljevaslika"
        android:id="@+id/desnaSlika"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slikausluge"
        android:id="@+id/vrstaUsluge23"
        android:textColor="@color/black"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="Muško šišanje"/>

</RelativeLayout>